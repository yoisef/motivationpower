<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:background="@drawable/mainnn"

        android:layout_height="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:text="“عش كل لحظة وكأنها آخر لحظة في حياتك
عش بحبك لله عز وجل
عش بالتطبع بأخلاق الرسول عليه الصلاة والسلام
عش بالأمل ، عش بالكفاح ، عش بالصبر
عش بالحب ، وقدر قيمة الحياة .”
"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:fontFamily="@font/arabic"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:text="أقرأ"
            android:textColor="#fff"
            android:id="@+id/readid"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="#000"
            android:textSize="25dp"
            android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:text="أكمل القراءة"
                android:id="@+id/readonid"
                android:background="#000"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-9508195472439107/5535933025">


        </com.google.android.gms.ads.AdView>




    </RelativeLayout>








</LinearLayout>